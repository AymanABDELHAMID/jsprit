    ~ to have a
    -->
    <profile>
        <id>carIcev</id>
        <dimensions>
            <frontalArea>1.81</frontalArea>
            <!-- https://cars.lovetoknow.com/List_of_Car_Weights -->
            <weight>1324</weight> <!-- in kg -->
        </dimensions>
        <speed> <!-- in meter per second -->
            <maximum>25</maximum>
            <average>13</average>
        </speed>
        <crr>0.0105</crr> <!-- Rolling friction coefficient -->
        <cw>0.33</cw> <!-- air drag coefficient -->
        <nm>0.8</nm> <!-- efficiency of driving -->
        <ng>1000000</ng> <!-- efficiency of recuperating -->

    </profile>

